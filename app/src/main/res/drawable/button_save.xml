<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/colorSaveDark" />
            <gradient
                android:angle="-90"
                android:endColor="@color/colorSaveDark"
                android:startColor="@color/colorSaveDark" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/colorSaveDark" />
            <solid android:color="@color/colorSaveDark" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/colorSave" />
            <gradient android:angle="-90" android:endColor="@color/colorSave"
                android:startColor="@color/colorSave" />
        </shape>
    </item>
</selector>