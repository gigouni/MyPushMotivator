<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/contact_layout"
    tools:context="com.totomasterdevw.pushmotivator.mypushmotivator.activities.ContactActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="@string/contact_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:id="@+id/textView2"
            android:textSize="24sp" />

        <ImageView
            android:layout_height="150dp"
            app:srcCompat="@drawable/contact_profile"
            android:id="@+id/imageView"
            android:contentDescription="@string/contact_profile_image"
            android:layout_width="150dp"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="@string/contact_presenting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_below="@+id/imageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="35dp" />

        <TextView
            android:text="@string/contact_email_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="18sp"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="32dp"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="@string/contact_link_to_website"
            android:layout_below="@id/textView3"
            android:layout_marginTop ="32dp"
            android:layout_marginBottom ="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contact_button_website"
            android:background="@drawable/button_round_corner"
            android:textColor="@color/white" />

        <Button
            android:text="@string/contact_send_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contact_button_email"
            android:background="@drawable/button_round_corner"
            android:textColor="@color/white"
            android:layout_below="@id/contact_button_website"
            android:layout_marginBottom="32dp" />

    </RelativeLayout>
</ScrollView>