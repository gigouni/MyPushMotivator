<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/notifications_settings_layout"
    tools:context="com.totomasterdevw.pushmotivator.mypushmotivator.NotificationsSettingsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notifications_settings_display_name_hint_tv"
        android:text="@string/notifications_settings_display_name_hint" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_vertical_margin"
        android:paddingBottom="100dp"
        android:id="@+id/notifications_settings_display_name_hint_et"
        android:layout_below="@+id/notifications_settings_display_name_hint_tv"
        android:inputType="text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notifications_settings_gender_hint_tv"
        android:layout_below="@+id/notifications_settings_display_name_hint_tv"
        android:text="@string/notifications_settings_gender_hint" />

    <RadioGroup
        android:id="@+id/radioGrp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_fields"
        android:orientation="horizontal"
        android:layout_below="@+id/notifications_settings_gender_hint_tv">

        <RadioButton
            android:id="@+id/radioM"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:checked="true"
            android:layout_weight="1"
            android:text="@string/notifications_settings_male" />

        <RadioButton
            android:id="@+id/radioF"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:checked="false"
            android:layout_weight="1"
            android:text="@string/notifications_settings_female"
            />
    </RadioGroup>

    <Button
        android:text="@string/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/save_button"
        android:textColor="@color/white"
        android:id="@+id/notifications_settings_button_save" />

    <Button
        android:text="@string/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/cancel_button"
        android:textColor="@color/white"
        android:id="@+id/notifications_settings_button_cancel" />
</RelativeLayout>